          i.fa.fa-bars
        if !req.session
          ul.mobileMenu
            li 
              a.lr-padding-20(href="/products") Products
            li 
              a.lr-padding-20(href="/signup") Signup
            li 
              a.lr-padding-20(href="/signin") Signin
            li 
              a.lr-padding-20(href="/cart") Cart
