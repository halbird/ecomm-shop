    nav.flex-dir-col
      div.text-center.full-width.medium-font
        h2#section-title.small-margin.text-center #{sectionTitle}
      div.alerts
        if error && error.length > 0
          div(role="alert").alert.error
            h3 #{error}
        if success && success.length > 0
          div(role="alert").alert.success
            h3 #{success}